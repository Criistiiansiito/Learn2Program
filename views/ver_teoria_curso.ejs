<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cursos</title>

    <!-- incluir libreria a bootstrap-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/ver_teoria_curso.css"> <!--enlace al archivo css-->

   
</head>
<body>
    <!--header-->
    <%- include('header') %>

    <!--body-->
    <div class="container contenedor-principal mt-5">
        <h1 class="mb-4 text-center text-primary">Lista de Cursos</h1>
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-striped">
                <thead class="thead-dark text-center">
                    <tr>
                        <th>ID Teoría</th>
                        <th>Título</th>
                        <th>Teoría</th>
                    </tr>
                </thead>
                <tbody>
                    <% cursos.forEach(function(curso) { %>
                        <tr>
                            <td class="text-center"><%= curso.idteoria %></td>
                            <td><%= curso.titulo %></td>
                            <td><%= curso.teoria %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    
        
    <!--footer-->
    <%- include('footer') %>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- script de Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
