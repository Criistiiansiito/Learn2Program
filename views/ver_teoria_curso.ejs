<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cursos</title>

    <!-- incluir libreria a bootstrap-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/ver_teoria_curso.css"> <!--enlace al archivo css-->

</head>
<body>
    <!--header-->
    <%- include('header') %>
    

    <main class="contenido">
        <div class="container contenedor-principal mt-5">
            <h1 class="mb-4 text-center text-primary"><%= curso.nombreCurso %></h1>
            <div class="container">
                <div class="accordion" id="accordionTemas">
                    <% temas.forEach(function(tema, index) { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading<%= index %>">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                                    <%= tema.nombreTema %>
                                </button>
                            </h2>
                            <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#accordionTemas">
                                <div class="accordion-body">
                                    <p class="card-text"><%= tema.contenidoTema %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>
        
    <!--footer-->
    <%- include('footer') %>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- script de Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
