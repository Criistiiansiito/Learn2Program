<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cursos</title>

    <!-- incluir libreria a bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/css/ver-teoria-curso.css"> <!--enlace al archivo css-->

</head>
<body>

    <main class="contenido">
        <div class="container contenedor-principal mt-5">
            <h1 class="mb-4 text-center text-primary"><%= curso.nombre %></h1>
            <div class="container">
                <div class="accordion" id="accordionTemas">
                    <% temas.forEach(function(tema, index) { %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="<%= index %>">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= index %>" aria-expanded="true" aria-controls="<%= index %>">
                                    <%= tema.titulo %>
                                </button>
                            </h2>
                            <div class="accordion-collapse collapse" id="<%= index %>" >
                                <div class="accordion-body">
                                    <p class="card-text"><%= tema.contenido %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>
    
</body>
</html>
